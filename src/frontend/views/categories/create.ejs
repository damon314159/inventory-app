<!doctype html>
<html lang="en">
<%- include('../components/head'); -%>

<body>
  <%- include('../components/header'); -%>
  <main class="add-category">
    <section class="form-section">
      <div class="container">
        <h1>Add New Category</h1>
        <form action="/categories/create" method="POST" class="category-form">
          <div class="form-group">
            <label for="name">Category Name *</label>
            <input type="text" id="name" name="name" value="<%= formData.name %>" placeholder="Enter category name" autocomplete="off" required />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Enter description" autocomplete="off" rows="4"><%= formData.description %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Create Category</button>
        </form>
      </div>
    </section>
  </main>
  <%- include('../components/footer'); -%>
</body>

</html>